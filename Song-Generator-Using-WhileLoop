function theSong( count ){
     
    while ( count > 0 ){
        if (count === 1){
            console.log(count + " bottle of beer on the wall, " + count + " bottle of the beer.");
            console.log("Take one down and pass it down, " + count + " bottle of beer on the wall.");
            count--;
        }
        else{
            console.log(count + " bottles of beer on the wall, " + count + " bottles of the beer.");
            count-- ;
            if(count === 1 ){
                 console.log("Take one down and pass it down, " + count + " bottle of beer on the wall.");
            }
            else{
                console.log("Take one down and pass it down, " + count + " bottles of beer on the wall.");
            }
        }
    }
    console.log("No more bottles of beer on the wall, No more bottles of the beer.");
}

theSong(3);
